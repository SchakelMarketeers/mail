        "pelago/emogrifier": "^1.1",
        "phpmailer/phpmailer": "^5.2"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.3",
        "phpmd/phpmd": "^2.4",
        "squizlabs/php_codesniffer": "^2.6",
        "twig/twig": "^1.27",
        "altorouter/altorouter": "^1.2",
        "doctrine/orm": "^2.5"
    },
    "suggest": {
        "doctrine/orm": "For managing tracking objects. XML objects are provided.",
        "altorouter/altorouter": "A simple router, which is easily integrated with this system.",
        "twig/twig": "A Twig extension is available for your convenience."
    },
    "autoload": {
        "psr-4": {
            "Schakel\\Mail\\": "src"
