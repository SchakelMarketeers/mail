    "autoload-dev": {
        "psr-4": {
            "Schakel\\Test\\Mail\\": "tests"
        }
    },
    "config": {
        "vendor-dir": "src/vendor"
    },
    "archive": {
        "exclude": [
            "examples",
            "tests",
            "STANDARDS.md",
            ".editorconfig",
            "phpunit.xml.dist",
            "phpmd.dist.xml",
